alias td='todo.sh'
#github
alias clonescripts='git clone git@github.com:kedarmhaswade/scripts.git'
#all aliases
alias a='alias'
alias h='history'
alias c='clear'
alias rm='rm -i'
alias so='source'
alias l='ls -latr'
alias folders='ls -aF1 | grep "/$" | grep -v "^\."'
alias execs='ls -aF1 | grep "\*$" '
