echo "Global environment"
MYDIR=$(dirname $0)
export SCRIPTS=$MYDIR
export MYSQL=/usr/local/mysql
export PATH=/usr/local/sw/apache-maven-3.0.3/bin:${MYSQL}/bin:${SCRIPTS}:${SCRIPTS}/Gen:${SCRIPTS}/Java:${SCRIPTS}/Mac:/opt/local/bin:${SCRIPTS}/Fun:/bin:/usr/bin:/usr/sbin:/sbin
if [ `uname` = "Darwin" ] 
then
  export PATH=${PATH}:$SCRIPTS/Mac
fi
if [ `uname` = "Linux" ]
then
  export JAVA_HOME=/usr/lib/jvm/latest
  export PATH=$SCRIPTS/Linux:$PATH
fi
export SVN_EDITOR=/usr/bin/vim
export EDITOR=/usr/bin/vim
alias cdp='cd ${HOME}/Projects'
alias cdscripts='cd ${SCRIPTS}'
#MySQL
if [ `uname` = "Darwin" ]; then
  alias start_mysql="/Library/StartupItems/MySQLCOM/MySQLCOM start"
  alias stop_mysql="/Library/StartupItems/MySQLCOM/MySQLCOM stop"
